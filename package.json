{
  "name": "pdv-simples",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start -p 3456",
    "electron:dev": "concurrently -k \"next dev -p 3456\" \"wait-on http://127.0.0.1:3456 && electron .\"",
    "electron:build": "npm run build",
    "electron:dist": "npm run build && electron-builder --win portable --x64"
  },
  "dependencies": {
    "next": "^15.5.12",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.2.0",
    "@types/react": "19.2.14",
    "autoprefixer": "^10.4.24",
    "concurrently": "^9.0.0",
    "electron": "^32.0.0",
    "electron-builder": "^24.13.3",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.2.0",
    "wait-on": "^7.2.0"
  }
}
